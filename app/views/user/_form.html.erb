<h1>New Form</h1>

<div class ='row'>
<div class="col s10 offset-s1">
<form >
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  <br />
    <%= f.label :age %>
    <%= f.text_field :age %> 
  <br />
    <%= f.label :location %>
    <%= f.text_field :location %>

  <br />
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  <br />
    <%= f.label :price %>
    <%= f.number_field :price %>
  <br />
    <%= f.label :status %>
    <%= f.select :status, [['for sale', 1], ['sold', 2]] %>

    <%= f.submit %>
  <% end %>
  </form>
  </div></div>

  create_table "profiles", force: :cascade do |t|
    t.string   "name"
    t.integer  "age"
    t.string   "location"
    t.datetime "created_at", null: false
    t.datetime "updated_at", null: false
  end